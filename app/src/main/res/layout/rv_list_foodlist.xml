<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@android:color/holo_blue_bright"
            android:id="@+id/imgViewFoodList"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="5dp"/>

        <TextView
            android:layout_toRightOf="@+id/imgViewFoodList"
            android:id="@+id/tvnama_makananFoodList"
            android:text="Judul"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/imgViewFoodList"
            android:id="@+id/tvWaktuFoodList"
            android:layout_below="@+id/tvnama_makananFoodList"
            android:text="Waktu"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/tvWaktuFoodList"
            android:layout_toRightOf="@+id/imgViewFoodList"
            android:id="@+id/tvKeteranganFoodList"
            android:text="Keterangan"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>